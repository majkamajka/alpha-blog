<%= render "shared/errors", obj: @article %>


<div class="row" style="padding-bottom:20px" >
  <div class="col-xs-12">
    
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title  %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>  
      </div> 
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description  %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article", autofocus: true %>
        </div>  
      </div>
 
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>  
      
      
    <% end %>
    
    <div class="col-xs-8 col-xs-offset-2" style="padding-left:2px">
      <%= link_to "Cancel request and return to article listing", articles_path %>
    </div>
    
    
  </div>
</div>  